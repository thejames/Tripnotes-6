<div class="new_note row">
	<div class="comment-metadata col-3">
		<span>New note as: <%= current_user.email %></span>
	</div><!-- /comment-metadata col-3 -->
<!-- /note_header insert -->

	<div class="col-6">

		<%= form_for([@note.trip, @note], class: 'needs-validation', html: {novalidate: true}) do |f| %>
			<% if @note.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

				<ul>
					<% @note.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="form-group">
				<%= f.text_area :content, placeholder: 'Well.. say something', class: 'form-control', rows: '6', required: true %>
				<div class="invalid-feedback">
					You&rsquo;ve got to say something
				</div>
			</div>

			<div class="input-group mb-3">
				<div class="input-group-prepend">
					<!-- <label class="input-group-text" for="inputGroupSelect01">Options</label> -->
					<%= f.label :category, class: 'input-group-text' %>
				</div>
				<%= f.collection_select :note_category_id, NoteCategory.all, :id, :name, {}, { class: 'custom-select' } %>
			</div>

			<div class="actions">
				<%= f.submit class: 'btn btn-primary btn-sm' %>
			</div>
		<% end %>
	</div><!-- /col-6 -->
</div><!-- /new_note -->
