<h1>Listing notes</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Category</th>
    <th>Trip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trip.notes.each do |note| %>
  <tr>
    <td><%= note.content %></td>
    <td><%= note.category %></td>
    <td><%= note.trip %></td>
    <td><%= link_to 'Show', [note.trip, note] %></td>
    <td><%= link_to 'Edit', edit_trip_note_path(note.trip, note) %></td>
    <td><%= link_to 'Destroy', [note.trip, note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

