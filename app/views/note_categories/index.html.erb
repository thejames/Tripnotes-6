<%# ------------------------------------------------------------------------ begin main content %>

<h1>Note Categories</h1>

<table>
	<thead>
		<tr>
			<th width="">Name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @note_categories.each do |note_category| %>
			<tr>
				<td><%= note_category.name %></td>
				<td>
					<div class="btn-group btn-group-sm">
						<%= link_to 'Edit', edit_note_category_path(note_category), class: 'btn btn-light' %>
						<%= link_to 'Destroy', note_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Note Category', new_note_category_path, class: 'btn btn-secondary' %>
